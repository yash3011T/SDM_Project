<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="500.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.sdmproject.Controller.BlockOPUSController">
   <children>
      <VBox alignment="CENTER" layoutX="242.0" prefHeight="500.0" prefWidth="309.0">
         <children>
            <HBox prefHeight="44.0" prefWidth="353.0">
               <children>
                  <HBox prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <Label prefHeight="25.0" prefWidth="122.0" text="Enter Mobile No.">
                           <font>
                              <Font size="16.0" />
                           </font>
                        </Label>
                     </children>
                  </HBox>
                  <TextField prefHeight="34.0" prefWidth="252.0" fx:id="mobileNumber"/>
               </children>
            </HBox>
            <HBox prefHeight="46.0" prefWidth="353.0">
               <children>
                  <Label prefHeight="25.0" prefWidth="169.0" text="Enter OTP            " >
                     <font>
                        <Font size="16.0" />
                     </font>
                  </Label>
                  <TextField prefHeight="34.0" prefWidth="218.0" fx:id="OTPField" />
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="53.0" prefWidth="353.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#onClickSendOTP" text="Send OTP" fx:id="SendOTPButton">
                     <opaqueInsets>
                        <Insets top="10.0" />
                     </opaqueInsets>
                     <font>
                        <Font size="16.0" />
                     </font>
                  </Button>
                  <Button alignment="CENTER" mnemonicParsing="false" text="Submit OTP" onAction="#onClickSubmitOTP" fx:id="SubmitOTPButton">
                     <font>
                        <Font size="16.0" />
                     </font>
                     <opaqueInsets>
                        <Insets />
                     </opaqueInsets>
                     <HBox.margin>
                        <Insets left="30.0" />
                     </HBox.margin>
                  </Button>
               </children>
               <padding>
                  <Insets left="10.0" right="10.0" top="10.0" />
               </padding>
            </HBox>
         </children>
      </VBox>
      <Button layoutX="25.0" layoutY="24.0" mnemonicParsing="false" onAction="#onClickBack" text="Back">
         <font>
            <Font size="16.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
